<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/response_rating"
                android:layout_width="24dp"
                android:layout_height="14dp"
                android:layout_marginStart="4dp"
                android:text="+99"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/response_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/response_name"
                app:layout_constraintVertical_bias="0.32999998" />

            <ImageView
                android:id="@+id/response_like"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/response_verified_lawyer_ico"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/response_verified_lawyer_ico"
                app:layout_constraintVertical_bias="0.6"
                app:srcCompat="@drawable/ic_like_1" />

            <ImageView
                android:id="@+id/response_verified_lawyer_ico"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/response_name"
                app:layout_constraintStart_toEndOf="@+id/response_name"
                app:layout_constraintTop_toTopOf="@+id/response_name"
                app:srcCompat="@drawable/ic_trial" />

            <TextView
                android:id="@+id/response_name"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:text="Bob Swagger"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/response_rating"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/response_verified_lawyer_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Legal Expert"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/response_verified_lawyer_ico"
                app:layout_constraintStart_toEndOf="@+id/response_verified_lawyer_ico"
                app:layout_constraintTop_toTopOf="@+id/response_verified_lawyer_ico" />

            <TextView
                android:id="@+id/response_body"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/response_like"
                app:layout_constraintStart_toStartOf="@+id/response_name"
                app:layout_constraintTop_toBottomOf="@+id/response_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>