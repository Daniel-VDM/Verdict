<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGrey"
    tools:context=".ui.forum.PostThreadActivity">

    <Spinner
        android:id="@+id/postThread_selectCategory"
        android:layout_width="310dp"
        android:layout_height="57dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <EditText
        android:id="@+id/postThread_titleContent"
        android:layout_width="269dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/postThread_titleWrapper"
        app:layout_constraintTop_toTopOf="@+id/postThread_titleWrapper" />

    <TextView
        android:id="@+id/postThread_titleWrapper"
        android:layout_width="310dp"
        android:layout_height="57dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/border"
        android:freezesText="true"
        android:translationZ="-3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postThread_descriptionWrapper"
        android:layout_width="310dp"
        android:layout_height="316dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/border"
        android:freezesText="true"
        android:translationZ="-3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/postThread_descriptionContent"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/description_hint"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:singleLine="false"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/postThread_descriptionWrapper"
        app:layout_constraintTop_toTopOf="@+id/postThread_descriptionWrapper" />

    <TextView
        android:id="@+id/postThread_titleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="@string/title"
        app:layout_constraintStart_toStartOf="@+id/postThread_titleWrapper"
        app:layout_constraintTop_toTopOf="@+id/postThread_titleWrapper" />

    <TextView
        android:id="@+id/postThread_descriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/description"
        app:layout_constraintStart_toStartOf="@+id/postThread_descriptionWrapper"
        app:layout_constraintTop_toTopOf="@+id/postThread_descriptionWrapper" />

    <CheckBox
        android:id="@+id/postThread_anonymous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="70dp"
        android:buttonTint="#0F701B"
        android:checked="false"
        android:text="Anonymous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/postThread_submitButton"
        android:layout_width="92dp"
        android:layout_height="33dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="70dp"
        android:background="@color/colorButtonSubmitGreen"
        android:text="Submit"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>