<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forum.PostResponseActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundGrey"
        tools:context=".ui.forum.PostThreadActivity">

        <EditText
            android:id="@+id/postResponse_titleName"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:clickable="false"
            android:contextClickable="false"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/postResponse_titleWrapper"
            app:layout_constraintTop_toTopOf="@+id/postResponse_titleWrapper" />

        <EditText
            android:id="@+id/postResponse_titleNumThumbs"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:clickable="false"
            android:contextClickable="false"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#0F701B"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/postResponse_titleWrapper"
            app:layout_constraintTop_toTopOf="@+id/postResponse_titleWrapper" />

        <TextView
            android:id="@+id/postResponse_titleWrapper"
            android:layout_width="310dp"
            android:layout_height="64dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="116dp"
            android:background="@drawable/border"
            android:freezesText="true"
            android:translationZ="-3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/postResponse_responseContent"
            android:layout_width="280dp"
            android:layout_height="340dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:background="@android:color/white"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/description_hint"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:singleLine="false"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@+id/postResponse_responseWrapper"
            app:layout_constraintTop_toTopOf="@+id/postResponse_responseWrapper" />

        <TextView
            android:id="@+id/postResponse_responseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/response"
            app:layout_constraintStart_toStartOf="@+id/postResponse_responseWrapper"
            app:layout_constraintTop_toTopOf="@+id/postResponse_responseWrapper" />

        <TextView
            android:id="@+id/postResponse_responseWrapper"
            android:layout_width="310dp"
            android:layout_height="384dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="204dp"
            android:background="@drawable/border"
            android:translationZ="-3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/postResponse_anonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginBottom="70dp"
            android:buttonTint="#0F701B"
            android:text="Anonymous"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/postResponse_submitButton"
            android:layout_width="92dp"
            android:layout_height="33dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="70dp"
            android:background="@color/colorButtonSubmitGreen"
            android:text="Submit"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>